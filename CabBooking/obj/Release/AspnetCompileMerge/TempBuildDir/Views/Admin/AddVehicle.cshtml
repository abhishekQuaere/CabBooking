@model CabBooking.Models.AddVehicle
@{
    ViewBag.Title = "AddVehicle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Add Vehicle</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i> <a class="parent-item" href="index.html">Home</a> <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">Vehicle</a> <i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Add Vehicle</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-head">
                        <header>Add Vehicle</header>
                        <button id="panel-button" class="mdl-button mdl-js-button mdl-button--icon pull-right" data-upgraded=",MaterialButton">
                            <i class="material-icons">more_vert</i>
                        </button>
                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" data-mdl-for="panel-button">
                            <li class="mdl-menu__item">
                                <i class="material-icons">assistant_photo</i>Action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">print</i>Another action
                            </li>
                            <li class="mdl-menu__item">
                                <i class="material-icons">favorite</i>Something else
                                here
                            </li>
                        </ul>
                    </div>
                    @using (Html.BeginForm("AddVehicle", "Admin", FormMethod.Post))
                    {
                        <div class="card-body row">
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.VehicleName, new { @class = "mdl-textfield__input", @id = "txtVno" })
                                    <label class="mdl-textfield__label">Vehicle Name</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.VehicleNumber, new { @class = "mdl-textfield__input", @id = "txtVno" })
                                    <label class="mdl-textfield__label">Vehicle Number</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height txt-full-width">
                                    @Html.TextBoxFor(x => x.VehicleType, new { @class = "mdl-textfield__input", @id = "vtype", @readonly = "readonly", @tabindex = "-1" })
                                    <label for="vtype" class="pull-right margin-0">
                                        <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                                    </label>
                                    <label for="vtype" class="mdl-textfield__label">Vehicle Type</label>
                                    <ul data-mdl-for="vtype" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                                        <li class="mdl-menu__item" data-val="1">SUV</li>
                                        <li class="mdl-menu__item" data-val="2">SEDAN</li>
                                        <li class="mdl-menu__item" data-val="3">Crossover</li>
                                        <li class="mdl-menu__item" data-val="4">Coupe</li>
                                        <li class="mdl-menu__item" data-val="5">Van</li>
                                        <li class="mdl-menu__item" data-val="6">Wagon</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.VehicleModel, new { @class = "mdl-textfield__input", @id = "txtvmodel" })
                                    <label class="mdl-textfield__label">Vehicle Model</label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.SeatingCapacity, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtSCapacity" })
                                    <label class="mdl-textfield__label" for="txtSCapacity">
                                        Seating
                                        Capacity
                                    </label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.PricePerKm, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtKm" })
                                    <label class="mdl-textfield__label" for="txtKm">Price Per K/M(in $)</label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.PricePerM, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtKm" })
                                    <label class="mdl-textfield__label" for="txtkm">Price Per Min(in $)</label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.MinimumFare, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtfare" })
                                    <label class="mdl-textfield__label" for="txtfare">Minimum Fare(in $)</label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.Commission, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtCommition" })
                                    <label class="mdl-textfield__label" for="txtCommition">
                                        Commission(in
                                        %)
                                    </label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.PassengerCancelTimeLimit, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtTimeLimit" })
                                    <label class="mdl-textfield__label" for="txtTimeLimit">
                                        Passenger
                                        Cancellation
                                        Time Limit(in Minute)
                                    </label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.PassengerCancelCharge, new { @class = "mdl-textfield__input", @pattern = "-?[0-9]*(\\.[0-9]+)?", @id = "txtCancCharge" })
                                    <label class="mdl-textfield__label" for="txtCancCharge">
                                        Passenger
                                        Cancellation
                                        Charges(in $)
                                    </label>
                                    <span class="mdl-textfield__error">Number required!</span>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.Purchase, new { @class = "mdl-textfield__input", @id = "Purchase" })
                                    <label class="mdl-textfield__label" for="Purchase">
                                        Purchase
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.Fule, new { @class = "mdl-textfield__input", @id = "txtCancCharge" })
                                    <label class="mdl-textfield__label" for="Fule">
                                        Fule Type
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextBoxFor(x => x.DriverName, new { @class = "mdl-textfield__input", @id = "txtCancCharge" })
                                    <label class="mdl-textfield__label" for="DriverName">
                                        Driver Name
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-6 p-t-20">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                    @Html.TextAreaFor(x => x.VehicleDescription, new { @class = "mdl-textfield__input", @id = "txtCancCharge" })
                                    <label class="mdl-textfield__label" for="VehicleDescription">
                                        Vehicle Description
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">Submit</button>
                                <button type="reset" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">Cancel</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
